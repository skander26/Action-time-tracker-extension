{
    "manifest_version": 3,
    "name": "Local-First Time Tracker",
    "version": "1.0.0",
    "description": "Tracks active time spent on websites. Local-only, privacy-focused.",
    "permissions": [
        "storage",
        "tabs",
        "idle"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Time Tracker"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}